@model survey_app.Models.Question

<form asp-action="Edit" asp-area="Question" method="post">
    <div class="row">
        <div class="col-lg-12">
            <div class="form-group">
                <label>Question:</label>
                <input asp-for="Description" name="Description" type="text" required class="form-control" placeholder="Enter Description" tabindex="1">
            </div>
            <br>
            <div class="form-group">
                <label>A:</label>
                <input asp-for="Choices[0].Description" value="@Model.Choices?[0].Description" type="text" required class="form-control" placeholder="Description" tabindex="2">
            </div>

            <div class="form-group">
                <label>B:</label>
                <input asp-for="Choices[1].Description" value="@Model.Choices?[1].Description" type="text" required class="form-control" placeholder="Description" tabindex="3">
            </div>

            <div class="form-group">
                <label>C:</label>
                <input asp-for="Choices[2].Description" value="@Model.Choices?[2].Description" type="text" required class="form-control" placeholder="Description" tabindex="4">
            </div>

            <div class="form-group">
                <label>D:</label>
                <input asp-for="Choices[3].Description" value="@Model.Choices?[3].Description" type="text" required class="form-control" placeholder="Description" tabindex="5">
            </div>
            <div class="form-group">
                <div asp-validation-summary="All" class="text-danger"></div>
            </div>
            <div class="card-footer">
                <center>
                    <button type="submit" class="btn btn-warning">Edit Question</button>
                    <a asp-action="Index" asp-controller="Question" class="btn btn-secondary">Cancel</a>
                </center>
            </div>
        </div>
    </div>
</form>