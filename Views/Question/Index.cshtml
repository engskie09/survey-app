@model List<survey_app.Models.Question>

<div class="row">
    <div class="col-md-12">
       <a asp-action="Create" asp-controller="Question" class="btn btn-success">Create</a>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <table class="table">
            <thead>
                <tr>
                    <td>Description</td>
                    <td>Actions</td>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Description</td>
                        <td>
                            <a asp-action="Edit" asp-controller="Question" asp-route-id="@item.Id">Edit</a>
                            <a asp-action="Delete" asp-controller="Question" asp-route-id="@item.Id">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>